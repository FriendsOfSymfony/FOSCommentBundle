<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="FOS\CommentBundle\Entity\Thread">

        <id name="identifier" type="string" column="identifier" />

        <field name="permalink" column="permalink" type="string" />

        <field name="isCommentable" column="isCommentable" type="boolean" />

        <field name="numComments" column="numComments" type="integer" />

        <field name="lastCommentAt" column="lastCommentAt" type="datetime" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>
