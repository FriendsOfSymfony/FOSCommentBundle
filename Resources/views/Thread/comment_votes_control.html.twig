<div class="fos_comment_comment_voting" id="fos_comment_score_{{ comment.id }}">
    {% if fos_comment_vote_unique() %}
        {% set vote = fos_comment_vote_by_voter(comment) %}

        {% if vote is not empty and vote.value == 1 %}
            <button data-url="{{ url("fos_comment_remove_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "voteId": vote.id }) }}"
                    class="fos_comment_comment_vote selected">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_voteup{% endtrans %}</button>
        {% elseif vote is not empty %}
            <button data-url="{{ url("fos_comment_edit_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "voteId": vote.id, "value": 1 }) }}"
                    class="fos_comment_comment_vote">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_voteup{% endtrans %}</button>
        {% else %}
            <button data-url="{{ url("fos_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": 1 }) }}"
                    class="fos_comment_comment_vote">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_voteup{% endtrans %}</button>
        {% endif %}

        <div class="fos_comment_comment_score">{% include '@FOSComment/Thread/comment_votes.html.twig' with { 'commentScore': comment.score } %}</div>

        {% if vote is not empty and vote.value == -1 %}
            <button data-url="{{ url("fos_comment_remove_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "voteId": vote.id }) }}"
                    class="fos_comment_comment_vote selected">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_votedown{% endtrans %}</button>
        {% elseif vote is not empty %}
            <button data-url="{{ url("fos_comment_edit_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "voteId": vote.id, "value": -1 }) }}"
                    class="fos_comment_comment_vote">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_votedown{% endtrans %}</button>
        {% else %}
            <button data-url="{{ url("fos_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": -1 }) }}"
                    class="fos_comment_comment_vote">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_votedown{% endtrans %}</button>
        {% endif %}
    {% else %}
        <button data-url="{{ url("fos_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": 1}) }}" class="fos_comment_comment_vote">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_voteup{% endtrans %}</button>
        <button data-url="{{ url("fos_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": -1}) }}" class="fos_comment_comment_vote">{% trans from 'FOSCommentBundle' %}fos_comment_comment_show_votedown{% endtrans %}</button>
        <div class="fos_comment_comment_score">{% include '@FOSComment/Thread/comment_votes.html.twig' with { 'commentScore': comment.score } %}</div>
    {% endif %}
</div>
